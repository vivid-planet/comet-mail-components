{
    "compilerOptions": {
        "declaration": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "rootDir": "src"
    },
    "compileOnSave": false,
    "include": ["./src", "./.storybook"],
    "exclude": ["**/*.stories.tsx"]
}
